<h1 class="h3 mb-3 font-weight-normal title" style="text-align: center">Mude sua senha</h1>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length), input_html: { autocomplete: "new-password" }, placeholder: 'Nova senha'                   %>
    <%= f.input :password_confirmation, label: false, required: true, input_html: { autocomplete: "new-password" }, placeholder: 'Confirmar sua nova senha' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Mudar minha senha", class: 'btn btn-primary btn-block' %>
  </div>
  <hr/>
  <%= render "devise/shared/links" %>
<% end %>
