<h1 class="h3 mb-3 font-weight-normal title" style="text-align: center">Login</h1>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, label: false, autofocus: true, input_html: { autocomplete: "email" }, placeholder: 'E-mail' %>
    <%= f.input :password, required: false, label: false, input_html: { autocomplete: "current-password" }, placeholder: 'Senha' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions" >
    <%= f.button :submit, "Entrar", class: 'btn btn-primary', style:"width: 100%;" %>
  </div>
  <hr/>
  <%= render "devise/shared/links" %>
<% end %>
