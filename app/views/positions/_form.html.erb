<%= simple_form_for @position do |form| %>
  <%= form.input :name %>
  <%= form.input :career, as: :select, collection: @careers, label_method: :second, value_method: :first, include_blank: false, selected: @position.career %>  
  <%= form.input :contract, as: :select, collection: @contracts, label_method: :second, value_method: :first, include_blank: false, selected: @position.contract %>
  <%= form.input :remote %>
  <%= form.input :publish %>
  <%= form.input :city %>
  <%= form.input :state, as: :select, collection: Brazil.states, label_method: :second, value_method: :first %>
  <%= form.input :summary, maxlength: 360, input_html: { class: 'count-textarea', rows: 4 } %>
  <div id="the-count">
    <span id="current"> 0 </span>
    <span id="maximun"> / 360 </span>
  </div>
  <label>Descrição</label>
  <%= form.rich_text_area :description, class: 'trix-edit' %>

  <%= form.button :submit, class: 'btn btn-primary' %>
<% end %>

