<% if flash.present? %>
  <% if flash[:success].present? %>
    <% @icon = 'success' %>
    <% @title = 'Tudo certo!' %>
    <% @message = flash[:success] %>
  <% elsif flash[:error] %>
    <% @icon = 'error' %>
    <% title = 'Erro!' %>
    <% @message = flash[:error] %>
  <% else %>
    <% @icon = 'success' %>
    <% title = 'Alerta!' %>
    <% @message = flash[:notice] %>
  <% end %>  
  
  <%= javascript_tag do %>
    Swal.fire({
      title: '<%= "#{@title}" %>',
      text: '<%= "#{@message}" %>',
      icon: '<%= "#{@icon}" %>',
      confirmButtonText: 'Ok!'
    })
  <% end %>  
<% end %>